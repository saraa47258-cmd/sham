{
  "name": "sham-coffee-worker",
  "version": "1.0.0",
  "description": "تطبيق قهوة الشام للعمال",
  "main": "main.js",
  "author": "Sham Coffee",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.shamcoffee.worker",
    "productName": "Sham Coffee Worker",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sham Coffee Worker"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}

