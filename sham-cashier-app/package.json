{
  "name": "sham-cashier",
  "version": "1.0.0",
  "description": "Sham Coffee Cashier - POS System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build-installer": "electron-builder --win nsis"
  },
  "author": "Sham Coffee",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.shamcoffee.cashier",
    "productName": "Sham Cashier",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["portable"],
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "ShamCashier.exe"
    }
  }
}

